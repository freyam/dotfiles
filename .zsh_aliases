# File Systems
alias ls='ls --color=auto --group-directories-first'
alias grep='grep --color=auto'
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -la'
alias mv='mv -iv'
alias cp='cp -iv'
alias ln='ln -iv'	
alias rm='rm -iv --preserve-root'
alias mkdir='mkdir -pv'

# Utilities
alias h='history'
alias j='jobs -l'
alias c='clear'
alias q='exit'
alias o='xdg-open'
alias hc='h -c; c'
alias du='du -ch'
alias sai='sudo apt-fast install -y'
alias sar='sudo apt-fast remove -y'
alias cln='sudo apt-fast autoclean; sudo apt-fast autoremove; sudo apt-fast clean'
alias upd='sudo apt-fast update -y; sudo apt-fast upgrade -y; sudo apt-fast dist-upgrade -y'